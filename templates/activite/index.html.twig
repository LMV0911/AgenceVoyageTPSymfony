{% extends 'base.html.twig' %}

{% block title %}Nos Activités
{% endblock %}

{% block body %}
	<h2 class="text-3xl font-bold text-green-700 mb-6 text-center">Nos Activités</h2>
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
		{% for activite in activites %}
			<div class="bg-white rounded shadow p-6 flex flex-col">
				<h3 class="text-xl font-semibold mb-2">{{ activite.nom }}</h3>
				<p class="mb-2 text-gray-600">{{ activite.description|slice(0, 100) ~ '...' }}</p>
				<a href="{{ path('app_activite_show', {id: activite.id}) }}" class="mt-auto inline-block bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">Voir détails</a>
			</div>
		{% else %}
			<p class="col-span-full text-center text-gray-500">Aucune activité disponible.</p>
		{% endfor %}
	</div>
{% endblock %}
