{% extends 'base.html.twig' %}

{% block title %}Créer un voyage
{% endblock %}

{% block body %}
	<div class="max-w-2xl mx-auto bg-white rounded shadow p-8 mt-8">
		<h1 class="text-2xl font-bold mb-6 text-blue-700">Créer un nouveau voyage</h1>

		{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
		{{ form_row(form.titre) }}
		{{ form_row(form.description) }}
		{{ form_row(form.prix) }}
		<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
			<div>
				{{ form_row(form.date_debut) }}
			</div>
			<div>
				{{ form_row(form.date_fin) }}
			</div>
		</div>
		{{ form_row(form.pays) }}
		{{ form_row(form.activites) }}
		{{ form_row(form.photo) }}

		<div class="flex justify-end space-x-2 mt-8">
			<a href="{{ path('admin_voyage_index') }}" class="bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300">Annuler</a>
			<button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Créer</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
