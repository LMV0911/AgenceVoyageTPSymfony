{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe
{% endblock %}

{% block body %}
	<div class="max-w-lg mx-auto bg-white rounded-2xl shadow-lg p-10 mt-12 border border-gray-200">
		<h2 class="text-2xl font-bold mb-6 text-gray-900">Changer mon mot de passe</h2>
		{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
		<div>
			{{ form_label(form.currentPassword) }}
			{{ form_widget(form.currentPassword, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
			{{ form_errors(form.currentPassword) }}
		</div>
		<div>
			{{ form_label(form.plainPassword) }}
			{{ form_widget(form.plainPassword, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
			{{ form_errors(form.plainPassword) }}
		</div>
		<div class="flex justify-end">
			<button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Enregistrer</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
